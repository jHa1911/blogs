<div class="form-group mb-2">
    <label for="title" class="form-label">Title</label>
    <input required value="<%= article.title %>" type="text" class="form-control" id="title" name="title">
</div>
<div class="form-group mb-2">
    <label for="description" class="form-label">Description</label>
    <textarea required class="form-control" id="description" name="description" rows="3"><%= article.description %></textarea>
</div>
<div class="form-group mb-2">
    <label for="markdown">Markdown</label>
    <textarea required class="form-control" id="markdown" name="markdown" rows="6"><%= article.markdown %></textarea>
</div>
<a href="/" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Submit</button>